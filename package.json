{
  "name": "skill-forge-mcp",
  "version": "1.1.0",
  "description": "MCP server for staged access to the Agent Skill creation process document",
  "type": "module",
  "bin": {
    "skill-forge-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc && cp src/content/*.md src/content/*.json dist/content/ && mkdir -p dist/content-ja && cp src/content-ja/*.md src/content-ja/*.json dist/content-ja/",
    "start": "node dist/index.js",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --write src/ tests/",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/node": "^25.2.3",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/popyson1648/skill-forge-mcp.git"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "agent-skill",
    "skill-creation",
    "ai-agent"
  ],
  "homepage": "https://github.com/popyson1648/skill-forge-mcp#readme",
  "bugs": {
    "url": "https://github.com/popyson1648/skill-forge-mcp/issues"
  },
  "author": "popyson1648",
  "types": "./dist/index.d.ts"
}
